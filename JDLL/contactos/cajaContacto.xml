<?xml version="1.0" encoding="UTF-8" ?>
<Module>
	<ModulePrefs title="Cajetin personalizado CONTACTOS portal Global Customer Solutions"
		title_url=""
		height="300"
		width="465"
		author=""
		author_email=""
		description="Cajetin personalizado CONTACTOS portal Global Customer Solutions"
		screenshot=""
		thumbnail=""  
		scrolling="false"
		author_location="Madrid, Spain"
		scaling="false">
		<Require feature="dynamic-height"/>
		<Require feature="setprefs"/>
	</ModulePrefs>  
	<UserPref name="VarNombreProyecto" display_name="Nombre proyecto:" default_value="International Transaction Services"/>
	<UserPref name="VarNombreResponsable" display_name="Nombre y apellidos del reponsable:" default_value=""/>
	<UserPref name="VarTelefono" display_name="Número de teléfono:" default_value=""/>
	<UserPref name="VarCargo" display_name="VarCargo:" default_value=""/>	
	<UserPref name="Varemail" display_name="Correo:" default_value=""/>		
	<UserPref name="VarColorLetra" display_name="Color texto por defecto" default_value="#666"/>
	<UserPref name="VarSize" display_name="Tamaño de texto por defecto" default_value="13"/>
	<Content type="html">
	<![CDATA[
		<style>		
			#content_div img {
				padding: 0 15px 10px 0;
			}
			#content_div {
				background-image: url('https://bbvagcs.googlecode.com/svn/trunk/fondocajetinuntercio.png');
			}
			#content_div a img {
				padding: 0;
			}
			.sites-adminfooter {
				display:none;
			}
			h2.titulobloque {
				font-size: 16px;
				margin: 0 0 10px 0;
				color: #3F78B2;
			}
			a.enlaceboton {
				background-image: url("https://bbvagcs.googlecode.com/svn/trunk/fondobotonuntercio.png");
				background-repeat: no-repeat;
				color: #FFFFFF;
				display: block;
				float: right;
				font-size: 12px;
				font-weight: bold;
				height: 31px;
				margin: 0px;
				padding-top: 10px;
				text-align: center;
				text-decoration: none;
				width: 165px;
			}
			.margintop {
				margin-top: 7px !important;
			}
			
		</style>
	
		<div id="content_div"  style="height:180px; background-image:url(https://bbvagcs.googlecode.com/svn/trunk/fondocajetinuntercio.png); background-color: transparent; background-repeat: no-repeat; background-position: top; "></div>

		<script type="text/javascript">
			var html="";
			// Obtener userprefs
			var prefs = new gadgets.Prefs();
			var VarBorde="0";
			var VarAlign="left";
			var VarColorFondo="transparent";
			
			var VarNombreProyecto=prefs.getString("VarNombreProyecto");
			var VarNombreResponsable=prefs.getString("VarNombreResponsable");
			var VarTelefono=prefs.getString("VarTelefono");
			var Varemail=prefs.getString("Varemail");
			var VarCargo=prefs.getString("VarCargo");
			
			var VarColorBorde="#fff";
			var VarSize=prefs.getString("VarSize");
						
			document.body.style.backgroundColor="#fff";			
			html+='<table style=\"border-style: none;\" width=\"100%\">';
			html+='<tr><td>';  
			html+='<div style=\"padding: 10px; font-size:' + VarSize + '; color:' + VarColorLetra + ';\">';
			
			html+='<h1>'+VarNombreProyecto+'</h1>';	
			html+='<h2>'+VarNombreResponsable+'</h2>';	
			html+='<h3>'+VarCargo+'</h3>';	
			html+='<h4>'+Varemail+'</h4>';			
					
			html+='</div>';
			html+='</td></tr></table>';
			document.getElementById("content_div").innerHTML = html;
			gadgets.window.adjustHeight();
		</script>
	]]>  
	</Content>  
	<Content type="html" view="configuration"  preferred_height="480">
	<![CDATA[
				
		<style>
			table td {
				color: #000;
				font-size: 11px;
				font-weight: bold;
			}
			table td input,
			textarea {
				color: #000;
				font-size: 11px;				
			}			
			input#VarTituloBloque {
				width: 300px;
			}
			input#VarImagenDestacada {
				width: 575px;
			}
			.btnTexto {
				width: 200px;
			}
			.btnURL {
				width: 345px;
			}
			.destacado {
				color:red;
				font-size:20px;
				font-weight:bold;
			}
			.textodefecto {
				width: 40px;
			}
			.textocolor {
				width: 57px;
			}
		</style>
		
		<table width="100%" border="0" id="tablaconfig">			
			<tr>		
				<td>
					Nombre del proyecto: <input type="text" id="VarNombreProyecto" value="__UP_VarNombreProyecto__" onchange="registra('VarNombreProyecto')">					
				</td>
			</tr>
			<tr>		
				<td>
					Nombre y apellidos del responsable: <input type="text" id="VarNombreResponsable" value="__UP_VarNombreResponsable__" onchange="registra('VarNombreResponsable')">					
				</td>
			</tr>
			<tr>		
				<td>
					Cargo: <input type="text" id="VarCargo" value="__UP_VarCargo__" onchange="registra('VarCargo')">					
				</td>
			</tr>
			<tr>		
				<td>
					Correo: <input type="text" id="Varemail" value="__UP_Varemail__" onchange="registra('Varemail')">					
				</td>
			</tr>			
		</table>
			
		<script type="text/javascript">			
			// Get userprefs
			var prefs = new gadgets.Prefs();			
			function registra(variable)
			{
				prefs.set(variable,document.getElementById(variable).value);
			}	
			gadgets.window.adjustHeight();
		</script>   
	]]>
	</Content>
</Module>