<![endif]-->
<script>
    
    var gadgetHelper = null;
    _IG_RegisterOnloadHandler(loadVisualizationAPI);
    var numElePag = 8;
    var _Col = 3;
	//var detallePagina = prefs.getInt("varURLdetallePagina");
	
    function loadVisualizationAPI() 
	{
        google.load("visualization", "1", {"packages": ["table"]});
        google.setOnLoadCallback(sendQuery);
    }

    function sendQuery() 
	{
        var prefs = new _IG_Prefs(); // User preferences
        //var urlTable = prefs.getString("_table_query_url");
        numElePag = prefs.getInt("_NumElemPorPagina");		
        _Col = prefs.getInt("_Col");
        gadgetHelper = new google.visualization.GadgetHelper();
        var query = gadgetHelper.createQueryFromPrefs(prefs);
        query.send(handleQueryResponse);
    }
/*
    function enlace(data, rowNum) 
	{
        return '<span class="enlace">'+ data.getValue(rowNum, 0) +'</span>';
    }
*/

    function handleQueryResponse(response) 
	{
        if (!gadgetHelper.validateResponse(response)) 
		{ 
			return; 
		}
        
		data = response.getDataTable();
        
        
		// columnasAmostrar.push("{ calc: enlace, type: 'string', label: 'blabla'}");
		/* */
		//https://developers.google.com/chart/interactive/docs/reference#DataView
		//https://sites.google.com/site/gsiteslabscapgeminivalencia/home/labs/jose/tabla-clientes/detallecliente-CLIGLOBAL001
		//https://sites.google.com/site/gsiteslabscapgeminivalencia/home/labs/jose/tabla-clientes/detallecliente-cliglobal001
		//https://sites.google.com/a/bbva.com/portal-gcs/listaclientespruebas/ficha-CLIGLOBAL001

		//var formatter = new google.visualization.PatternFormat('<a class="enlacetabla" href="https://sites.google.com/site/gsiteslabscapgeminivalencia/home/labs/jose/tabla-clientes/detallecliente-{0}" target="_parent" title="Ver detalle de {1}">{0}</a> ');
		var formatter = new google.visualization.PatternFormat('<a class="enlacetabla" href="https://sites.google.com/a/bbva.com/portal-gcs/listaclientespruebas/ficha-{0}" target="_parent" title="Ver detalle de {1}">{0}</a> ');
		formatter.format(data, [0,0]); // Apply formatter and set the formatted value of the first column.
		
		//var formatterArrow = new google.visualization.PatternFormat('{2} <img src="https://gsites-labs-capgemini-valencia.googlecode.com/svn/trunk/JDLL/flecha_puntos_tabla.png" />');
		//formatterArrow.format(data, [0,0]); // Apply formatter and set the formatted value of the first column.
 
  		var view = new google.visualization.DataView(data);
		
        var columnasAmostrar = [];
        
		for(i=0 ; i < _Col ; i++) 
		{ 
			columnasAmostrar.push(i);
		}
  
        view.setColumns(columnasAmostrar);

		var cssClassNames = {
			'headerRow': 'header',
			'tableRow': 'filaPar',
			'oddTableRow': 'filaImpar',
			'selectedTableRow': 'filaSeleccionada',
			'hoverTableRow': 'filaHover',
			'headerCell': '',
			'tableCell': 'formateoCelda',
			'rowNumberCell': ''
		};
         
        var chart = new google.visualization.Table(document.getElementById('tablediv'));
        var options = {'sortColumn': 1, 'page': 'enable', 'pageSize': numElePag, 'alternatingRowStyle': true, 'allowHtml': true, 'cssClassNames': cssClassNames};
        
        chart.draw(view, options);
    }
</script>
]]>
</Content>
</Module>