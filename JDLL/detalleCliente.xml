		<script type="text/javascript"> 
			
			console.debug('detalleCliente.xml version 24');
			
			var gadgetHelper = null;	
			var prefs = new _IG_Prefs(); // User preferences			
			var urlTable = prefs.getString("_table_query_url");		
						
			_IG_RegisterOnloadHandler(loadVisualizationAPI);
			
			function loadVisualizationAPI() 
			{
				google.load("visualization", "1", {"packages": ["table"]});
				google.setOnLoadCallback(sendQuery);
			}

			function sendQuery() 
			{
				gadgetHelper = new google.visualization.GadgetHelper();
				//var query = gadgetHelper.createQueryFromPrefs(prefs);	
				var opts = {dataType:'jsonp'};				
							
				var idCliquery = paramtoquery("ficha-");				
				
				var query = new google.visualization.Query(urlTable, opts);	
				//var querytosend = "select *  where A like '" + idCliquery.toUpperCase() + "'";
				var querytosend = "select A";
				query.setQuery(querytosend);
				query.send(handleQueryResponse);
				
				/*
				var query2 = new google.visualization.Query(urlTable, opts);
				var queryProducto = "select D,E group by D ";
				query2.setQuery(queryProducto);
				query2.send(handleQueryProducto);*/
			}

			//devuelve el indicide donde se encuentra la "cadena" del array "parametros"
			function indiceCadena (parametros, cadena)
			{	
				for(var i=0; i<parametros.length; i++)
				{					
					if(parametros[i].indexOf(cadena)>-1)
					{
						return i;
					} 
				}	
			}
						
			//obtiene el valor del parametro que le pasamos por url: 
			// para ficha-CLIGLOBAL001 , pasandole "ficha-" devuelve "CLIGLOBAL001"
			function paramtoquery(param)
			{
				var arrayParametros = gadgets.util.getUrlParameters()["parent"].split("/");		
				var indexFicha = indiceCadena(arrayParametros,param);		
				var arrayidCliente = arrayParametros[indexFicha].split("-");		
				return arrayidCliente[1];		
			}
			
			function handleQueryResponse(response) 
			{
				if (!gadgetHelper.validateResponse(response)) { return; }
			
				if (response.isError()) 
				{
					alert('Error in query: ' + response.getMessage() + ' ' + response.getDetailedMessage());
					return;
				}
				
				data = response.getDataTable();		
				
				document.getElementById('idCliente').innerHTML = data.getValue(0,0);
				document.getElementById('nombreCliente').innerHTML = data.getValue(0,1);
				document.getElementById('idProducto').innerHTML = data.getValue(0,2);
				document.getElementById('idServicio').innerHTML = data.getValue(0,3);				
				document.getElementById('idDetalle').innerHTML = data.getValue(0,4);
				document.getElementById('idPaises').innerHTML = data.getValue(0,5);
				document.getElementById('idFormato').innerHTML = data.getValue(0,6);
				
				document.getElementById('imagenCliente').innerHTML ='<img border="0" src="' + data.getValue(0,7) +'">';
			
			
				
				var cssClassNames = {
					'headerRow': 'header',
					'tableRow': 'filaPar',
					'oddTableRow': 'filaImpar',
					'selectedTableRow': 'filaSeleccionada',
					'hoverTableRow': 'filaHover',
					'headerCell': '',
					'tableCell': 'formateoCelda',
					'rowNumberCell': ''
				};
				 
				/* para mostrar la tabla de la que obtendremos los datos */ 
				var chart = new google.visualization.Table(document.getElementById('tablediv'));		
				var options = { 'page': 'enable', 'pageSize': 20, 'alternatingRowStyle': true, 'allowHtml': true, 'cssClassNames': cssClassNames};		
				var view = new google.visualization.DataView(data);
				/*var _Col = 13;
				var columnasAmostrar = [];
				
				for(i=0 ; i < _Col ; i++) 
				{ 
					columnasAmostrar.push(i);
				}
				
				view.setColumns(columnasAmostrar);		*/		
				chart.draw(view, options);
				
			}
			
			function handleQueryProducto(response) 
			{
				/*if (!gadgetHelper.validateResponse(response)) { return; }
			
				if (response.isError()) 
				{
