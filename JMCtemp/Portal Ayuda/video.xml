	<div id="video-container">
		<div id="urlVideo"></div>
		<div id="TagVideo"></div>
		<div id="titleVideo"></div>
        <div id="textVideo"></div>
	 </div>
	 
	
   <script type="text/javascript">
	 var gadgetHelper = null;
	 var prefs = new gadgets.Prefs();
	 
	 var titleVideo = prefs.getString("titleBanner1");
	 var textVideo = prefs.getString("textBanner1");
	 var urlVideo = prefs.getString("urlbanner1");
	 
	 document.getElementById("titleVideo").innerHTML = titleVideo;
	 document.getElementById("textVideo").innerHTML = textVideo;
	 document.getElementById("urlVideo").innerHTML = '<a href="'+urlVideo+'" target="_parent"></a>';
	
	
	

  </script>
