 <Content type="html">
 <![CDATA[
 
	<div id="title-crumbs">valor de title</div>
	
	<style>
		a.linkBreadCrumb {
		
		
		} 
	</style>
	
	<script type="text/javascript">
		gadgets.util.registerOnLoadHandler(showBreadcrumbs);

		function showBreadcrumbs()
		{
			//Construct the breadcrumb string
			var s ="";			
			var parametros = gadgets.util.getUrlParameters()["parent"].split("/");  
			
			// alert (parametros + "---->array");
			
			for (var i in parametros)
			{
				if (parametros[i]=='home') 
				{	
					s = "<a class=\'linkBreadCrumb\' href=\'https://sites.google.com/site/gsiteslabscapgeminivalencia/home\' target=\'_parent\'>home</a>";
				}
				else 
				{
					s = s + " >  <a href=\'https://sites.google.com/site/gsiteslabscapgeminivalencia/home/" + parametros[i] + "\'> target=\'_parent\' title=\'_parametros[i]\'" + parametros[i] + "</a>";      
				}
			}
			alert (s);
			document.getElementById("title-crumbs").innerHTML = s;    
		}
	</script>
 ]]>
 
